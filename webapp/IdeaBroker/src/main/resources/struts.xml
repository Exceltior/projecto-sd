<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default">

        <!-- Quando acedem a /, isto é, aao root, redireccionar para o login FIXME: Isto vai mudar no futuro-->
        <action name="">
            <result type="redirect">login.jsp</result>
        </action>

        <!-- A acção de registo -->
        <action name="register" class="actions.controller.RegisterAction" method="execute">
            <result name="success">home.jsp</result>
        </action>

        <!-- A acção de login (de notar que é bem distinta de um acesso ao login.jsp -->
        <action name="login" class="actions.controller.LoginAction" method="execute">
                <result name="success">home.jsp</result>
                <result name="error">error.jsp</result>
        </action>

        <!-- Acção de teste -->
        <action name="testlayout" class="actions.controller.TempAction" method="execute">
            <result name="success">testelayout.jsp</result>
        </action>

        <action name="viewtopic" class="actions.controller.ViewTopicAction" method="execute">
            <result name="success">viewtopic.jsp</result>
        </action>

        <action name="viewuserideas" class="actions.controller.ViewUserIdeasAction" method="execute">
            <result name="success">viewideas.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="viewuserwatchlist" class="actions.controller.ViewUserWatchListAction" method="execute">
            <result name="success">viewideas.jsp</result>
        </action>

        <action name="listtopics" class="actions.controller.ListTopicsAction" method="execute">
            <result name="success">listtopics.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="searchtopic" class="actions.controller.SearchTopicAction" method="execute">
            <result name="success">listtopics.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="searchidea" class="actions.controller.SearchIdeaAction" method="execute">
            <result name="success">viewideas.jsp</result>
        </action>

        <action name="createIdea" class="actions.controller.SubmitIdeaAction" method="execute">
            <result name="success">home.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="removeIdea" class="action.controller.RemoveIdeaAction" method="execute">
            <result name="success">home.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="showtransactionhistory" class="actions.controller.ShowTransactionHistoryAction" method="execute">
            <result name="success">showtransactionhistory.jsp</result>
            <result name="error">error.jsp</result>
        </action>

    </package>

    <package name="default" namespace="/" extends="json-default">
        <action name="addtowatchlist" class="actions.controller.AddToWatchlistAction" method="execute">
            <result type="json"></result>
        </action>
        <action name="removefromwatchlist" class="actions.controller.RemoveFromWatchlistAction" method="execute">
            <result type="json"></result>
        </action>

        <action name="setshareprice" class="actions.controller.SetSharePriceAction" method="execute">
            <result type="json"></result>
        </action>

        <action name="buyshares" class="actions.controller.BuySharesAction" method="execute">
            <result type="json"></result>
        </action>
    </package>

</struts>