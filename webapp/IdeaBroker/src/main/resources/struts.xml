<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default">

        <!-- Quando acedem a /, isto é, aao root, redireccionar para o login FIXME: Isto vai mudar no futuro-->
        <action name="">
            <result type="redirect">login.jsp</result>
        </action>

        <!-- A acção de login (de notar que é bem distinta de um acesso ao login.jsp -->
        <action name="login" class="org.apache.struts.action.controller.LoginAction" method="execute">
                <result name="success">/home.jsp</result>
        </action>

        <!-- Ir para o registo
        FIXME Isto nao me parece muito bem, mas é a unica forma de eu o mandar para o register.jsp-->
        <action name="goregister">
            <result type="redirect">/register.jsp</result>
        </action>

        <!-- A acção de registo -->
        <action name="register" class="org.apache.struts.action.controller.RegisterAction" method="execute">
                <result name="success">/home.jsp</result>
        </action>

    </package>

</struts>